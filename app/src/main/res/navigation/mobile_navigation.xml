    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.testapplication.ui.scan.ScanFragment"
        android:label="@string/title_scan"
